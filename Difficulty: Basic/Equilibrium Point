class Solution {
    // Function to find equilibrium point in the array.
    public static int findEquilibrium(int arr[]) {
        // code here
        int n = arr.length;
 
    
    int totalSum=0;
    for(int i =0;i<n;i++){
        
        totalSum+=arr[i];
        
    }
    int preSum=0;
    for(int i =0;i<n;i++){
        totalSum=totalSum-arr[i];
        if(totalSum==preSum){
            return i;
        }
        preSum+=arr[i];
       
    }
    return -1;
    }
}
